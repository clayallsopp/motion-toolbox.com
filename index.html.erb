      <div class="row hidden-phone" >
        <div class="span12 category-info">
          <h2>Filter By Tag</h2>
          <div class="search-container">
            <select data-placeholder="Select a Tag..." class="tag-search">
              <option></option>
            </select>
          </div>
          <div style="clear:both;"></div>
        </div>
      </div>

      <div class="row">
        <% @categories.each_with_index do |category,index| %>
          <div class="span12 category-info">
            <h2><%= category["name"] %></h2>
            <hr class="visible-desktop" />
          <div style="clear:both;"></div>
          </div>
          <% category["wrappers"].each_with_index do |wrapper, index| %>
          <div class="span6">
            <div class="well wrapper-info">
              <div class="wrapper-title">
                <h3><a href="<%= wrapper["url"] %>" target="_blank"><%= wrapper["name"] %></a></h3>
              </div>
              <div class="wrapper-body">
                <%= wrapper["description"] %>
              </div>
              <% if wrapper["gem_name"] %>
                <div class="wrapper-gem">
                  <code><a target="_blank" href="http://rubygems.org/gems/<%= wrapper['gem_name'] %>">gem install <%= wrapper["gem_name"] %></a></code>
                </div>
              <% end %>
              <div class="wrapper-tags">
                <% wrapper["tags"].uniq.each do |tag| %>
                  <div class="wrapper-tag">
                    <%= tag %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
          <% if index.odd? && index > 0 %>
            <div class="clear" style="clear:both"></div>
            <% end %>
          <% end %>
        <% end %>
      </div>

